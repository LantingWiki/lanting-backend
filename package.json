{
  "name": "lanting-backend",
  "version": "1.0.0",
  "description": "Backend API for Lanting Archive Project",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "archive": "npx single-file",
    "archive:ts": "ts-node src/cli/archive.ts",
    "save-page": "ts-node src/cli/archive.ts",
    "test:puppeteer": "ts-node src/test-puppeteer.ts"
  },
  "keywords": [
    "express",
    "api",
    "nodejs",
    "lanting",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/axios": "^0.9.36",
    "@types/jsdom": "^21.1.7",
    "@types/multer": "^1.4.12",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsdom": "^26.0.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.2",
    "openai": "^4.95.0",
    "puppeteer": "^20.8.0",
    "single-file-cli": "^1.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.5",
    "@types/puppeteer": "^7.0.4",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "@types/express": "4.17.21"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
